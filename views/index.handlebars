<h1>Big Burger</h1>



<ul>
  {{#each bigburger}}
    {{#unless testburger}}
      {{> bigburger/big-burger eat=true}}
    {{/unless}}
  {{/each}}
</ul>



<ul>
  {{#each bigburger}}
    {{#if testburger}}
      {{> bigburger/big-burger eat=false}}
    {{/if}}
  {{/each}}
</ul>

<div id="burgerform">

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>

  <div class="form-group">
    <label for="testburger">Burger</label><br>
    <input type="radio" name="testburger" value="1" checked> Order Burger<br>
    <input type="radio" name="testburger" value="0"> Delete Burger
  </div>

  <button class="button" type="submit">Add Burger</button>
</form>

</div>
